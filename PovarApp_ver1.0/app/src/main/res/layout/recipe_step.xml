<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp"
    style="@style/MyCardViewStyle">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:id="@+id/dishpage_recipe_step_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:textColor="#000"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@id/dishpage_recipe_step_delete_but"
                android:hint="Шаг"/>

            <ImageButton
                android:id="@+id/dishpage_recipe_step_delete_but"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/delete_black"
                android:layout_alignParentEnd="true"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"/>
        </RelativeLayout>

        <EditText
            android:id="@+id/dishpage_recipe_step_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Поле для текста"
            android:background="@android:color/transparent"
            android:textColor="#000"
            android:padding="8dp"/>
    </LinearLayout>
</android.support.v7.widget.CardView>

<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/ingredient_to_edit"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MyCardViewStyle">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center">

        <AutoCompleteTextView
            android:id="@+id/dishpage_ingredient_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:textColor="#000"
            android:gravity="start"
            android:padding="8dp"
            style="@android:style/Widget.EditText"
            android:background="@android:color/transparent"
            android:hint="ингредиент" />

        <EditText
            android:id="@+id/dishpage_ingredient_quantity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:textColor="#000"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:padding="8dp"
            android:background="@android:color/transparent"
            android:hint="кол-во" />

        <Spinner
            android:id="@+id/ingredient_unit"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="4"
            android:gravity="center"
            android:padding="8dp"
            android:background="@drawable/spinner_custom_style" />

        <ImageButton
            android:id="@+id/ingredient_delete_but"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/delete_black"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"/>

    </LinearLayout>
</android.support.v7.widget.CardView>